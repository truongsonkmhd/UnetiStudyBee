<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="00000000000002" author="truongsonkmhd">
        <createTable tableName="tbl_course_enrollment">
            <column name="enrollment_id" type="uuid" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_enrollment_course" references="tbl_course(course_id)"/>
            </column>
            <column name="student_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_enrollment_student" references="tbl_user(id)"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="request_message" type="text"/>
            <column name="rejection_reason" type="text"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
            <column name="approved_at" type="timestamp"/>
        </createTable>

        <addUniqueConstraint tableName="tbl_course_enrollment" columnNames="course_id, student_id" constraintName="uq_enrollment_course_student"/>
        
        <createIndex tableName="tbl_course_enrollment" indexName="idx_enrollment_course">
            <column name="course_id"/>
        </createIndex>
        <createIndex tableName="tbl_course_enrollment" indexName="idx_enrollment_student">
            <column name="student_id"/>
        </createIndex>
        <createIndex tableName="tbl_course_enrollment" indexName="idx_enrollment_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
